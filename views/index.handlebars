<img src='../assets/img/burger.jpg' width='200'> 
<div>
  <h1 class='center-block'>Eat-Da-Burger</h1>
</div>

<div class='row center-block'>
  <div class='col-sm-6' id='new-burgers'>
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden">
              <button type="submit" class='btn-warning'>Devour it!</button>
            </form>
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class='col-sm-6' id='eaten-burgers'>
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>

</div>

<div>
  <h2 class='center-block'>Add a new burger to drool over!</h2>
  <form class="create-update-form" action="/" method="POST">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" name="name">
    </div>
    <button type="submit" class='btn-info'>Add this burger</button>
  </form>
</div>

